{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "target": "ES2020",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "paths": {
      "~*": ["./*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
